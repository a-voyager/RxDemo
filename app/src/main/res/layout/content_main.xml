<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="top.wuhaojie.rxdemo.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/btn_retrofit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rxtrofit网络框架"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送通知"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_notify_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送横幅通知"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_to_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="折叠Toolbar"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_palette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取界面主题色"
        android:textAllCaps="false"/>
</LinearLayout>
